{% extends 'SiteMainBundle:Frontend:layout.html.twig' %}

{% block content %}
    <div class="payment-form completed-payment-form">
        <form action=""></form>
        <div class="form">
            <h1>Проверьте данные</h1>

            <table class="payments-table">
                <tr>
                    <td>Тариф</td>
                    <td>Стоимость месяца (руб.)</td>
                    <td>Количество оплачиваемых месяцев</td>
                </tr>
                <tr>
                    <td>
                        {{ payment.tariff.name }}
                    </td>
                    <td>
                        {{ payment.tariff.price|number_format(0, '', ' ') }}
                    </td>
                    <td>
                        {{ payment.numberMonth }}
                    </td>
                </tr>
                {% if payment.discount > 0 %}
                    <tr>
                        <td colspan="3">Скидка:</td>
                    </tr>
                    <tr>
                        <td colspan="3">{{ payment.discountNumber }}%</td>
                    </tr>
                {% endif %}
                <tr>
                    <td colspan="3">Итого:</td>
                </tr>
                <tr>
                    <td colspan="3">{{ payment.amount|number_format(0, '', ' ') }}</td>
                </tr>
            </table>

            <form action="" method="post">
                {#<a href="{{ path('frontend_client_payment') }}" class="btn">{{ "frontend.payment.back"|trans({}, 'menu') }}</a>#}
                <button class="btn" type="submit">{{ "frontend.payment.send"|trans({}, 'menu') }}</button>
            </form>
        </div>
    </div>
{% endblock %}