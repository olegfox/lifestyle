{% extends 'SiteMainBundle:Frontend/Auth:dialog.html.twig' %}

{% block id %}reset-password-dialog{% endblock %}
{% block class %}dialog--open{% endblock %}

{% block head %}Сброс пароля{% endblock %}

{% block content %}
    <div class="wrap-form">
        <form action=""></form>
        <div class="form feedback-form">
            <div class="flash-notice">
            </div>
            {{ form_start(form, { 'style': 'horizontal', attr: {novalidate: 'novalidate'} }) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn">Сохранить</button>
            {{ form_rest(form) }}
        </div>
    </div>
{% endblock %}